<div class="container text-center">
    <div class="row mt-5 justify-content-center">
      <h4>商品一覧</h4>
    </div>


<div class="row mt-3 mb-3 justify-content-center">
  <%= form_tag(public_items_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "ジャンル検索" %>
    <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
  <% end %>
</div>



 <% if customer_signed_in? %>

    <div class="row">
     <% @items.each do |item| %>

      <div class="col-3 mb-5">

      <div class="card">
        <div class="text-right">
        <i class="fas fa-heart fa-2x mt-2 mr-2 ml-2"></i>
        </div>
          <%= link_to public_item_path(item.id) do %>
            <%= image_tag item.image, size: '200x150'%>
          <% end %>
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%= item.genre.name %></h5>
                  <%= link_to public_item_path(item.id) do %>
                    <%= item.name %>
                    <%= item.shape %>
                    <%= item.size %><br/>
                  <% end %>
                    在庫数:<%= item.amount %>
                    定価¥<%= item.last_price %>
              </div>
            </div>
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <%= link_to "商品詳細", public_item_path(item.id), class: "btn btn-outline-success" %>
              </div>
      </div>
      </div>
      <% end %>
     </div>
<%= paginate @items %>

  <% end %>





<% if general_customer_signed_in? %>

   <div class="row">
     <% @items.each do |item| %>
      <div class="col-3 mb-5">
        <div class="card">
          <div class="text-right">
        <i class="fas fa-heart fa-2x mt-2 mr-2 ml-2"></i>
        </div>
          <%= link_to general_public_item_path(item.id) do %>
            <%= image_tag item.image, size: '180x150'%>
          <% end %>
          <div class="card-body p-4">
            <div class="text-center">
              <h5 class="fw-bolder"><%= item.genre.name %></h5>
                <%= link_to general_public_item_path(item.id) do %>
                  <%= item.name %>
                  <%= item.shape %>
                  <%= item.size %><br/>
                <% end %>
                  在庫数:<%= item.amount %>
                  定価¥<%= item.last_price %>
            </div>
          </div>
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <%= link_to "商品詳細", general_public_item_path(item.id), class: "btn btn-outline-success" %>
            </div>
        </div>
      </div>
    <% end %>
   </div>
   <%= paginate @items %>
<% end %>


</div>



