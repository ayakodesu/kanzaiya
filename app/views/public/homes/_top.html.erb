                <br />
              <strong>型</strong>
                <%= item.shape %>
                <br />
              <strong>サイズ</strong>
                <%= item.size %>
                 <br />
              <strong>定価</strong>
                ¥<%= item.last_price %>
                <br>
              </div>
            </div>
          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <%= link_to "商品詳細", general_public_item_path(item.id), class: "btn btn-success" %>
          </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
<% end %>




