
 <%= flash[:notice] %>


  <header class="py-5 bg-image-full" style="background-image: url('https://cdn.pixabay.com/photo/2017/01/15/16/23/bathroom-1982011_1280.jpg')">
    <div class="text-center my-5">
      <h1 class="text-white fs-3 fw-bolder">ようこそ! kanzaiyaへ!</h1>
        <h4 class="text-white fs-3 fw-bolder">このサイトは、kanzaiyaのECサイトになります。</br>
          kanzaiyaの商品の在庫確認、ご注文が出来ます。</h4>
          <h3>当社は、幅広く豊富に商品を取り揃えております。</h3>
          <h3>置いていない商品も、取り寄せ可能なものはございますので</h3>
          <h3>お気軽にお申し付けください！</h3>
    </div>
    </header>

<% if !general_customer_signed_in? %>
  <% if !customer_signed_in? %>
<div class="container">
   <div class="row mt-5 mb-5">
     <div class="col-4 text-center">
       <div class="card" style="width: 20rem;">
        <div class="card-header">
          <h2>一般ユーザー様</h2>
        </div>
        <div class="card-body">
          <div class="row mb-5 mt-3">
            <div class="col text-center">
              <%= link_to "登録済みの方", new_general_customer_session_path, class: "btn btn-primary" %>
            </div>
          </div>
        <div class="row mb-5 mt-3 text-center">
          <div class="col">
            <%= link_to "初めての方(新規登録)", new_general_customer_registration_path, class: "btn btn-white" %>
          </div>
        </div>
        </div>
       </div>
      </div>

    <div class="col-4 text-center">
       <div class="card" style="width: 20rem;">
        <div class="card-header">
          <h2>企業ユーザー様</h2>
        </div>
        <div class="card-body">
          <div class="row mb-5 mt-3">
            <div class="col text-center">
              <%= link_to "登録済みの方", new_customer_session_path, class: "btn btn-primary" %>
            </div>
          </div>
            <div class="row mb-5 mt-3 text-center">
              <div class="col">
                <%= link_to "初めての方(新規登録)", new_customer_registration_path, class: "btn btn-white" %>
              </div>
            </div>
        </div>
       </div>
     </div>


<div class="col-4 text-center">
       <div class="card" style="width: 20rem;">
        <div class="card-header">
          <h2>ゲスト様</h2>
        </div>
        <div class="card-body">
          <div class="row mb-5 mt-3">
            <div class="col text-center">
              <h5>お試しで使いたい方は<br/>
              こちらから</h5>
              <%= link_to 'ゲストログイン（閲覧用）', public_guest_sign_in_path, method: :post %>
            </div>
          </div>
</div>
</div>
</div>
</div>
</div>
  <% end %>
<% end %>


<% if customer_signed_in? %>
  <div class="container text-center">
    <h3>新着商品</h3>
      <div class="row text-center">
        <% @items.each do |item| %>
        <% if item.is_active %>
        <div class="col-3 mb-5">
           <div class="card text-black bg-white border-dark">
          <%= link_to (image_tag item.image, size: '150x150'), public_item_path(item.id) %>
            <div class="card-body text-black p-4">
              <div class="text-center">
              <strong>商品名</strong>
                <%= item.name %>
                <br />
              <strong>型</strong>
                <%= item.shape %>
                 <br />
              <strong>サイズ</strong>
                <%= item.size %>
                <br />
              <strong>定価</strong>
                ¥<%= item.last_price %>
                <br>
              </div>
            </div>
          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <%= link_to "商品詳細", public_item_path(item.id), class: "btn btn-success" %>
          </div>
            </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
<% end %>



<% if general_customer_signed_in? %>
  <div class="container text-center">
    <h3>新着商品</h3>
      <div class="row text-center">
