<%= render 'top', homes: @homes %>


  <div class="container text-center">
    <div class="font3"><h2>新着商品</h2></div>
      <div class="row text-center">
        <% @items.each do |item| %>
          <%= link_to public_item_path(item.id) do %>
        <% if item.is_active %>
        <div class="col-3 mb-5">
           <div class="card text-black bg-white border-dark">
          <%= link_to (image_tag item.image, size: '150x150'), public_item_path(item.id) %>
          <%= link_to public_item_path(item.id), class: "link" do %>
            <div class="card-body text-black p-4">
              <div class="text-center">
                <div class="font">
              <strong>商品名</strong>
                :<%= item.name %>
                <br />
              <strong>型</strong>
                :<%= item.shape %>
                 <br />
              <strong>サイズ</strong>
                :<%= item.size %>
                <br />
              <strong>単価</strong>
                :¥<%= item.last_price %>
                <br>
              </div>
              </div>
            </div>
            <% end %>
            </div>
          </div>
        <% end %>
        <% end %>
        <% end %>
      </div>

  </div>








