<%= render 'top', homes: @homes %>

<% if customer_signed_in? %>
<header class="py-5 bg-image-full" style="background-image: url('https://beiz.jp/images_M/white/white_00032.jpg')">
  <div class="container text-center">
    <div class="font3"><h2>新着商品</h2></div>
      <div class="row text-center">
        <% @items.each do |item| %>
          <%= link_to public_item_path(item.id) do %>
        <% if item.is_active %>
        <div class="col-lg-3 col-md-5 mb-5 text-center">
          <div class="card h-100">
          <%= link_to (image_tag item.image, size: '250x200'), public_item_path(item.id) %>
          <%= link_to public_item_path(item.id), class: "link" do %>
            <div class="card-body text-black p-4">
              <div class="text-center">
                <div class="font">
              <strong>商品名</strong>
                :<%= item.name %>
                <br />
              <strong>型</strong>
                :<%= item.shape %>
                 <br />
              <strong>サイズ</strong>
                :<%= item.size %>
                <br />
                <strong>在庫数</strong>
                :<%= item.amount %>
                <br />
              <strong>単価(税抜)</strong>
                :¥<%= item.last_price %>
                <br>
              </div>
              </div>
            </div>
            <% end %>
            </div>
          </div>
        <% end %>
        <% end %>
        <% end %>
      </div>
  </div>
</header>
<% end %>







