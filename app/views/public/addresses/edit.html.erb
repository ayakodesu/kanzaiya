<%= render 'edit', addresses: @addresses %>

<div class="row mt-3 mb-5 justify-content-center">
<% if @address.errors.any? %>
  <div class="alert-danger">
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
</div>


<%= form_with model: @address, url: public_address_path do |f| %>
<div class="container">
  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2">
      郵便番号
    </div>
      <div class="col-2">
        <%= f.text_field :postal_code, placeholder: "1234567(半角英数7桁)" %>
      </div>
  </div>
    <div class="row mt-3 mb-5 justify-content-center">
      <div class="col-2">
        住所
      </div>
      <div class="col-2">
        <%= f.text_field :address, placeholder: "東京都千代田区", :size=>"60" %>
      </div>
    </div>
  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2">
      名前
    </div>
      <div class="col-2">
        <%= f.text_field :name, placeholder: "山田花子" %>
      </div>
  </div>
  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2">
      TEL
      </div>
      <div class="col-2">
      <%= f.text_field :telephone_number, placeholder: "09012345678(半角英数10~11桁)", :size=>"30" %>
      </div>
  </div>

  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2 text-center">
      <%= link_to "戻る", public_addresses_path %>
    </div>
  <div class="col-2 text-center">
    <%= f.submit "変更を保存", class: "btn-gradient-green" %>
  </div>
  </div>
<% end %>

</div>
</header>
