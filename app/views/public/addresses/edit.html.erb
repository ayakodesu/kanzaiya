<%= render 'edit', addresses: @addresses %>

<%= form_with model: @address, url: public_address_path do |f| %>
<div class="container">
  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2">
      郵便番号
    </div>
      <div class="col-2">
        <%= f.text_field :postal_code, placeholder: "000000" %>
      </div>
  </div>
    <div class="row mt-3 mb-5 justify-content-center">
      <div class="col-2">
        宛先
      </div>
      <div class="col-2">
        <%= f.text_field :address, placeholder: "東京都千代田区" %>
      </div>
    </div>
  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2">
      宛名
    </div>
      <div class="col-2">
        <%= f.text_field :name, placeholder: "山田花子" %>
      </div>
  </div>
  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2">
      TEL
      </div>
      <div class="col-2">
      <%= f.text_field :telephone_number, placeholder: "08012345678" %>
      </div>
  </div>

  <div class="row mt-3 mb-5 justify-content-center">
    <div class="col-2 text-center">
      <%= link_to "戻る", public_addresses_path %>
    </div>
  <div class="col-2 text-center">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
  </div>
<% end %>

</div>
</header>
