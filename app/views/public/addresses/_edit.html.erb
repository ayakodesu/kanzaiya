<div class="container">
    <div class="row mt-5 justify-content-center">
      <h4>配送先編集</h4>
    </div>
<% if customer_signed_in? %>
<%= form_with model: @address, url: public_address_path do |f| %>
<div class="container">
  <div class="row mb-3">
    <div class="col-2">
      郵便番号
    </div>
      <div class="col-2">
        <%= f.text_field :postal_code, placeholder: "000000" %>
      </div>
  </div>

    <div class="row mb-3">
      <div class="col-2">
        宛先
      </div>
      <div class="col-2">
        <%= f.text_field :address, placeholder: "東京都千代田区" %>
      </div>
    </div>

  <div class="row mb-3">
    <div class="col-2">
      宛名
    </div>
      <div class="col-2">
        <%= f.text_field :name, placeholder: "山田花子" %>
      </div>
  </div>

  <div class="row mb-3">
    <div class="col-2">
      TEL
      </div>
      <div class="col-2">
      <%= f.text_field :telephone_number, placeholder: "08012345678" %>
      </div>
  </div>

  <div class="row mb-3">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
</div>
<% end %>
<% end %>

