
<div class="container">
    <div class="row mt-5 justify-content-center">
      <h4>注文履歴一覧</h4>
    </div>




    <table class="table table-hover table-bordered table-sm">
    <thead>
      <th>注文日時</th>
      <th>配送先名</th>
      <th>配送先</th>
      <th>TEL</th>
      <th>ステータス</th>
    </thead>


    <body>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y年%m月%d日 %H:%M:%S'), public_order_path(order.id) %></td>
          <td><%= order.name %></td>
          <td>〒<%= order.postal_code %><br>
          <%= order.address %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </body>

    </table>



</div>
