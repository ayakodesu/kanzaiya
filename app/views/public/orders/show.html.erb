<%= render 'show', orders: @orders %>

<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-lg-6 col-md-5">
  <table class="table table-bordered table-sm">
    <%= form_with model: @order, url: edit_public_customer_path do |f| %>
      <tr>
        <th>現場名</th>
        <td><%= @order.spot %>分</td>
      </tr>
      <% end %>
  </table>
  </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg col-md-5">
      <table class="table table-hover table-bordered table-sm">
        <thead>
          <tr>
            <th>商品</th>
            <th>型</th>
            <th>サイズ</th>
            <th>単価(税込み)</th>
            <th>個数</th>
            <th>合計</th>
            </tr>
        </thead>
        <% total = 0 %>
<tbody>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.shape %></td>
    <td><%= order_detail.item.size %></td>
    <td>¥<%= order_detail.item.with_tax_price %></td>
    <td><%= order_detail.amount %></td>
    <td>¥<%= order_detail.item.with_tax_price * order_detail.amount %></td>
  </tr>
  <% end %>
</tbody>
</table>
    </div>


<div class="col-lg-6 col-md-5">
    <div class="row justify-content-center">
      <%= form_with model: @order, url: edit_public_customer_path do |f| %>
      <table class="table table-bordered table-sm">
        <tr>
          <th>注文日時</th>
          <td><%= @order.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        </tr>
        <tr>
          <th>宛先</th>
          <td>〒<%= @order.postal_code %><br>
          <%= @order.address %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>TEL</th>
          <td><%= @order.telephone_number %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
    </div>
</div>

  <div class="col-lg-6 col-md-5">
    <table class="table table-bordered table-sm" style="border-collapse: collapse">
      <strong>請求情報</strong>
        <tr>
          <th bgcolor = "lightsteelblue">商品合計</th>
          <td>¥<%= @order.total_payment %></td>
        </tr>
        <tr>
          <th bgcolor = "lightsteelblue">配送料</th>
          <td>¥<%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th bgcolor = "lightsteelblue">ご請求額</th>
          <td>¥<%= @order.total_payment + @order.shipping_cost %></td>
        </tr>
    </table>
  </div>
<% end %>
</div>
</div>
  <div class="row mt-2 mb-5 justify-content-center">
    <%= link_to "戻る", public_orders_path %>
  </div>
