<%= render 'show', orders: @orders %>



<div class="container">
<tbody>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.size %></td>
    <td><%= order_detail.item.last_price %></td>
    <td><%= order_detail.amount %></td>
    <td>¥<%= order_detail.amount * order_detail.item.last_price %></td>
  </tr>
  <% end %>
</tbody>
</table>
    </div>


<div class="col-6">
    <div class="row justify-content-center">
      <%= form_with model: @order, url: edit_public_customer_path do |f| %>
      <table class="table table-bordered table-sm">
        <tr>
          <th>注文日時</th>
          <td><%= @order.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        </tr>

        <tr>
          <th>宛先</th>
          <td>〒<%= @order.postal_code %><br>
          <%= @order.address %></td>
        </tr>

        <tr>
          <th>宛名</th>
          <td><%= @order.name %></td>
        </tr>

        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>

        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
    </div>
    </div>

  <div class="col-6">
    <table class="table table-bordered table-sm" style="border-collapse: collapse">
      <strong>請求情報</strong>
        <tr>
          <th bgcolor = "lightsteelblue">商品合計</th>
          <td>¥<%= @order.total_payment %></td>
        </tr>

        <tr>
          <th bgcolor = "lightsteelblue">配送料</th>
          <td>¥<%= @order.shipping_cost %></td>
        </tr>

        <tr>
          <th bgcolor = "lightsteelblue">ご請求額</th>
          <td>¥<%= @order.total_payment + @order.shipping_cost %></td>
        </tr>
    </table>
  </div>

<% end %>
</div>

</div>
</div>