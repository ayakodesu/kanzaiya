<div class="container">
    <div class="row mt-5 justify-content-center">
      <h4>注文履歴詳細</h4>
    </div>
</div>


<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-hover table-bordered table-sm">
        <thead>
          <tr>
            <th>商品</th>
            <th>サイズ</th>
            <th>定価</th>
            <th>個数</th>
            <th>合計</th>
            </tr>
        </thead>





        </table>


    </div>
  </div>
</div>

<div class="container">
  <div class="row"></div>
</div>

<div class="container">
    <div class="row mt-5 justify-content-center">

      <%= form_with model: @order, url: edit_public_customer_path do |f| %>
      <table class="table table-hover table-bordered table-sm">

      <tr>
      <th>注文日時</th>
      <td><%= @order.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
      </tr>


      <tr>
      <th>宛先</th>
      <td>〒<%= @order.postal_code %><br>
      <%= @order.address %></td>
      </tr>


      <tr>
      <th>宛名</th>
      <td><%= @order.name %></td>
      </tr>


      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>


      <tr>
      <th>ステータス</th>
      <td><%= @order.status %></td>
      </tr>


      <div class="col-6">
      <table border="1" style="border-collapse: collapse">
  <strong>請求情報</strong>
  <tr>
    <th bgcolor = "lightsteelblue">商品合計</th>
      <td>¥<%= @order.total_payment %></td>
    </tr>

  <tr>
    <th bgcolor = "lightsteelblue">配送料</th>
      <td>¥<%= @order.shipping_cost %></td>
  </tr>

  <tr>
    <th bgcolor = "lightsteelblue">ご請求額</th>
      <td>¥<%= @order.total_payment + @order.shipping_cost %></td>
  </tr>


  </table>

  </div>


      <% end %>