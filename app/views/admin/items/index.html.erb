<div class="container text-center">
    <div class="row mt-5 justify-content-center">
      <h4>商品一覧</h4>
    </div>

<%= link_to "商品新規追加", new_admin_item_path, class: "btn btn-outline-info" %>

  <table class="table table-hover table-bordered table-sm">
    <thead>
      <th>商品画像</th>
      <th>ジャンル</th>
      <th>商品名/型/サイズ</th>
      <th>数量</th>
      <th>定価</th>
      <th>販売ステータス</th>

    </thread>

  <tbody>
    <% @items.each do |item| %>

    <tr>
      <td>
      <%= link_to admin_item_path(item.id) do %>
      <%= image_tag item.image, size: '50x50'%>
      <% end %>
      </td>
      <td><%= item.genre.name %></td>
      <td><%= link_to admin_item_path(item.id) do %>
      <%= item.name %><br />
      <%= item.shape %><br />
      <%= item.size %>
      <% end %>
      </td>
      <td><%= item.amount %></td>
      <td>¥<%= item.last_price %></td>
      <td><% if item.is_active == true %>
          <p class="text-success">販売中</p>
          <% else %>
          <p class="text-secondary">販売停止中</p>
          <% end %>
      </td>
    </tr>

    <% end %>
  </tbody>

</table>


</div>

<%= paginate @items %>