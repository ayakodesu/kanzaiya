<div class="container text-center">
    <div class="row mt-5 justify-content-center">
      <h4>商品一覧</h4>
    </div>

<div class="row mt-3 mb-3 right">
    <%= link_to "商品新規追加", new_admin_item_path, class: "btn btn-outline-info" %>
</div>

    <div class="row">
      <% @items.each do |item| %>
        <div class="col-3 mb-5">
          <div class="card">
          <%= link_to admin_item_path(item.id) do %>
            <%= image_tag item.image, size: '180x150'%>
          <% end %>
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%= item.genre.name %></h5>
                  <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                    <%= item.shape %>
                    <%= item.size %><br/>
                  <% end %>
                    在庫数:<%= item.amount %>
                    定価¥<%= item.last_price %>
              </div>
            </div>
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <%= link_to "商品詳細", admin_item_path(item.id), class: "btn btn-outline-success" %>
              </div>
            </div>
          </div>
      <% end %>
     </div>

</div>

<%= paginate @items %>