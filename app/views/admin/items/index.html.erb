<div class="container text-center">
    <div class="row mt-5 justify-content-center">
      <h4>商品一覧</h4>
    </div>

<div class="row mt-3 mb-3 justify-content-center">
  <%= form_tag(admin_items_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "ジャンル検索" %>
    <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="row mt-3 mb-3 justify-content-center">
    <%= link_to "商品新規追加", new_admin_item_path, class: "btn btn-outline-info" %>
</div>

    <div class="row">
      <% @items.each do |item| %>
        <div class="col-3 mb-5">
          <%= link_to admin_item_path(item.id), class: "link" do %>
          <div class="card">
             <div class="text-center">
            <%= image_tag item.image, size: '180x150'%>
              </div>
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%= item.genre.name %></h5>
                    <%= item.name %>
                    <%= item.shape %>
                    <%= item.size %><br/>
                    在庫数:<%= item.amount %>
                    定価¥<%= item.last_price %>
                    <td><% if item.is_active == true %>
                      <h4><p class="text-success">販売中</p></h4>
                    <% else %>
                      <h4><p class="text-secondary">販売停止中</p></h4>
                    <% end %>
              </div>
            </div>
            </div>
            <% end %>
          </div>
      <% end %>
     </div>
</div>

<%= paginate @items %>