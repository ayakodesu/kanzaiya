

<%= form_with model: @item, url: admin_item_path do |f| %>

<div class="container mt-5">
  <div class="row mt-3 justify-content-center">
    <div class="col-6 text-center">
      <div class="font"><h1>在庫数量</h1></div><br/><br/>
      <table class="table table-borderless table-striped">
       <th>数量</th>
    <td><%= f.text_field :amount, placeholder: "20" %></td>
    </table>
      <div class="font"><h1>現在の画像</h1></div><br/><br/>
    <%= image_tag @item.image, size: '350x300' %>
    </div>

  <div class="col-6">
    <div class="row mt-3 justify-content-center">
    <div class="font"><h1>商品編集</h1></div>
    </div>
    <table class="table table-borderless table-striped">
      <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image/*" %></td></tr>

        <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: '--選択してください--'}, class: 'sample' %></td></tr>

        <th>商品名</th>
          <td><%= f.text_field :name, placeholder: "商品名" %></td></tr>

        <th>商品説明</th>
          <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述" %></td></tr>


        <th>型</th>
          <td><%= f.text_field :shape, placeholder: "エルボ" %></td></tr>

        <th>サイズ</th>
          <td><%= f.text_field :size, placeholder: "15" %></td></tr>


        <th>定価</th>
          <td><%= f.text_field :last_price, placeholder: "10,000" %></td></tr>

        <th>販売ステータス</th>
          <td><%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %></td>
    </table>

  <div class="row mb-5 text-center justify-content-center">
    <div class="col-3 text-center">
      <%= link_to "戻る", admin_item_path(@item.id) %>
    </div>
      <div class="col-3 text-center">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  </div>
    <% end %>
  </div>
  </div>
</div>
</div>





