<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="container text-center">
    <div class="row mt-5 justify-content-center">
      <div class="font"><h4>商品詳細</h4></div>
    </div>
</div>

<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-6 text-center">
      <%= image_tag @item.image, size: '350x300' %>
    </div>

<div class="col-6">
  <table class="table table-borderless table-striped">
    <tr><th>商品名</th>
      <td><%= @item.name %></td></tr>

    <tr><th>商品説明</th>
      <td><%= @item.introduction %></td>

    <tr><th>型</th>
      <td><%= @item.shape %></td>

    <tr><th>サイズ</th>
      <td><%= @item.size %></td>

    <tr><th>数量</th>
      <td><%= @item.amount %></td>

    <tr><th>単価</th>
      <td>¥<%= @item.last_price.to_s(:delimited, delimiter: ',') %></td>

    <tr><th>販売ステータス</th>
      <td>
        <% if @item.is_active == true %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </td>
  </table>

<div class="container mb-5">
  <div class="row text-right justify-content-center">
    <div class="col-3 text-center">
      <%= link_to "商品一覧へ戻る", admin_items_path %>
    </div>
    <div class="col-3 text-center">
       <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn-gradient-green" %>
    </div>
  </div>
  <div class="row mt-5 text-right justify-content-center">
       <%= link_to "削除する", admin_destroy_item_path(@item.id), method: :delete, style:"color: red;",  method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>

</div>
  </div>
</div>