
<div class="container text-center">
    <div class="row mt-5 justify-content-center">
      <h4>商品詳細</h4>
    </div>
</div>


<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-6">
      <%= image_tag @item.image, size: '200x200' %>
    </div>


   <div class="col-6">
  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        商品名
      </div>
      <div class="col-4">
        <%= @item.name %>
      </div>
    </div>
  </div>

   <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        商品説明
      </div>
      <div class="col-4">
        <%= @item.introduction %>
      </div>
    </div>
  </div>



 <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        型
      </div>
      <div class="col-4">
        <%= @item.shape %>
      </div>
    </div>
  </div>

 <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        サイズ
      </div>
      <div class="col-4">
        <%= @item.size %>
      </div>
    </div>
  </div>


      <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        数量
      </div>
      <div class="col-4">
        <%= @item.amount %>
      </div>
    </div>
  </div>


      <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        定価
      </div>
      <div class="col-4">
        ¥<%= @item.last_price %>
      </div>
    </div>
  </div>


<div class="container">
    <div class="row mt-2">
      <div class="col-4">
        販売ステータス
      </div>
      <div class="col-4">
        <% if @item.is_active == true %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </div>
    </div>
  </div>


<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>

