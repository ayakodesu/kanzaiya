<div class="container">
    <div class="row mt-5 justify-content-center">
      <h4>会員詳細</h4>
    </div>


  <div class="container">
    <div class="row mt-2">
      <div class="col-3">
        会員ID
      </div>
      <div class="col-4">
      <% if @instances.class == Customer %>
        <%= @customer.id %>
      <% else %>
        <%= @general_customer.id %>
      <% end %>
      </div>
    </div>
  </div>




    <div class="row mt-2">
      <div class="col-3">
        名前
      </div>
      <div class="col-4">
      <% if @instances.class == Customer %>
        <%= @customer.last_name %>
        <%= @customer.last_name %>様
      <% else %>
        <%= @general_customer.last_name %>
        <%= @general_customer.first_name %>様
      <% end %>
      </div>
    </div>




    <div class="row mt-2">
      <div class="col-3">
        ふりがな
      </div>
      <div class="col-4">
        <% if @instances.class == Customer %>
        <%= @customer.last_name_kana %>
        <%= @customer.last_name_kana %>様
        <% else %>
        <%= @general_customer.last_name_kana %>
        <%= @general_customer.first_name_kana %>様
        <% end %>
      </div>
    </div>




    <div class="row mt-2">
      <div class="col-3">
        法人名
      </div>
      <div class="col-4">
        <%= @customer.corporation %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        〒
      </div>
      <div class="col-4">
        <% if @instances.class == Customer %>
        <%= @customer.postal_code %>
        <% else %>
        <%= @general_customer.postal_code %>
        <% end %>
      </div>
    </div>



    <div class="row mt-2">
      <div class="col-3">
        住所
      </div>
      <div class="col-4">
        <% if @instances.class == Customer %>
        <%= @customer.address %>
        <% else %>
        <%= @general_customer.address %>
        <% end %>
      </div>
    </div>




    <div class="row mt-2">
      <div class="col-3">
        電話番号
      </div>
      <div class="col-4">
        <% if @instances.class == Customer %>
        <%= @customer.telephone_number %>
        <% else %>
        <%= @general_customer.telephone_number %>
        <% end %>
      </div>
    </div>




    <div class="row mt-2">
      <div class="col-3">
        email
      </div>
      <div class="col-4">
        <% if @instances.class == Customer %>
        <%= @customer.email %>
        <% else %>
        <%= @general_customer.email %>
        <% end %>
      </div>
    </div>



    <div class="row mt-2">
      <div class="col-3">
        会員ステータス
      </div>
      <div class="col-4">

      </div>
    </div>


    <div class="row mt-2">
      <div class="col-3">
        <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <%= link_to "編集する", edit_admin_customer_path(@general_customer.id), class: "btn btn-success" %>
      </div>
    </div>


</div>
