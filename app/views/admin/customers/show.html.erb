<div class="container">
    <div class="row mt-5 justify-content-center">
      <h4>会員詳細</h4>
    </div>
</div>

<div class="container">
  <div class="row mt-5 justify-content-center">
    <div class="col-6">
      <table class="table table-borderless table-striped">

        <tr><th>会員ID</th>
        <td><%= @customer.id %></td></tr>

        <tr><th>名前</th>
        <td><%= @customer.full_name %>様</td></tr>

        <tr><th>ふりがな</th>
        <td><%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>様</td></tr>

        <tr><th>法人名</th>
        <td><%= @customer.corporation %></td></tr>

        <tr><th>〒</th>
        <td><%= @customer.postal_code %></td></tr>


        <tr><th>住所</th>
        <td><%= @customer.address %></td></tr>

        <tr><th>電話番号</th>
        <td><%= @customer.telephone_number %></td></tr>

        <tr><th>email</th>
        <td><%= @customer.email %></td></tr>

        <tr><th>会員ステータス</th>

        <td><% if @customer.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-secondary">退会</p>
        <% end %>
        </td></tr>
      </table>
    </div>
  </div>

<div class="container mb-5">
    <div class="row mt-2 mb-4 justify-content-center text-center">
        <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
     </div>
      <div class="row mt-2 mb-5 justify-content-center">
        <%= link_to "戻る", admin_customers_path %>
      </div>
    </div>
</div>

</div>
