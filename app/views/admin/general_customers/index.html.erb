<header class="py-5 bg-image-full" style="background-image: url('https://beiz.jp/images_M/white/white_00032.jpg')">
<div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="font"><h4>一般会員一覧</h4></div>
    </div>

<div class="row mb-3 justify-content-center">
  <%= form_tag(admin_general_customers_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "キーワード検索", :size=>"50" %>
    <%= submit_tag 'キーワード検索', full_name: nil, address: nil, class: "btn-gradient-blue" %>
  <% end %>
</div>

<%= paginate @general_customers %>

<table class="table table-secondary table-bordered table-sm">
  <thead>
    <th>会員ID</th>
    <th>名前</th>
    <th>住所</th>
    <th>会員ステータス</th>
  </thead>

 <tbody>
  <% @general_customers.each do |general_customer| %>
    <%# if instance.class == Customer %>
    <tr bgcolor="#f5f5f5">
      <td><%= general_customer.id %></td>
      <td><%= link_to general_customer.full_name, admin_general_customer_path(general_customer.id) %></td>
      <td><%= general_customer.address %></td>
      <td><% if general_customer.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
           <p class="text-secondary">退会</p>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>

<%= paginate @general_customers %>

<div class="row mt-5 mb-5 justify-content-center">
  <%= link_to "Homeへ戻る", admin_top_path %>
</div>

</div>

</header>
