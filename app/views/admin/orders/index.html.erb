<header class="py-5 bg-image-full" style="background-image: url('https://beiz.jp/images_M/white/white_00032.jpg')">
<div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="font"><h4>注文履歴一覧</h4></div>
    </div>

<div class="row mt-3 mb-3 justify-content-center">
  <div class="col-lg-4 col-md-5 mb-3 text-center">
  <%= form_tag(admin_orders_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "購入者検索" %>
    <%= submit_tag '購入者検索', name: nil %>
  <% end %>
  </div>

  <div class="col-lg-4 col-md-5 mb-3 text-center">
  <%= form_tag(admin_orders_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "現場名検索" %>
    <%= submit_tag '現場名検索', spot: nil %>
  <% end %>
  </div>

  <div class="col-lg-4 col-md-5 mb-3 text-center">
  <%= form_tag(admin_orders_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "配送先検索" %>
    <%= submit_tag '配送先検索', address: nil %>
  <% end %>
  </div>
</div>

<div class="row mb-3 justify-content-center">
  <%= form_tag(admin_orders_path, method: :get) do %>
    <%= text_field_tag :search, '', placeholder: "キーワード検索", :size=>"50" %>
    <%= submit_tag 'キーワード検索', name: nil, spot: nil, address: nil %>
  <% end %>
</div>

     <table class="table table-secondary table-bordered table-sm">
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>現場名</th>
        <th>配送先</th>
      </thead>
    <body>
      <% @instances.each do |instance| %>
        <% if instance.customer_id.present? %>
         <% p "order",instance %>
         <% p "customer",instance.customer %>
        <tr bgcolor="#f5f5f5">
          <td><%= link_to instance.created_at.strftime('%Y年%m月%d日 %H:%M:%S'), admin_order_path(instance.id) %></td>
          <td><%= instance.customer.full_name %></td>
          <td><%= instance.spot %></td>
          <td><%= instance.address %></td>
        </tr>
      <% else %>
        <% p instance %>
          <tr bgcolor="#f5f5f5">
            <td><%= link_to instance.created_at.strftime('%Y年%m月%d日 %H:%M:%S'), admin_order_path(instance.id) %></td>
            <td><%= instance.general_customer.full_name %></td>
            <td><%= instance.spot %></td>
            <td><%= instance.address %></td>
          </tr>
        <% end %>
      <% end %>
    </body>
    </table>

</div>
<div class="row mt-2 mb-5 justify-content-center">
  <%= link_to "Homeへ戻る", admin_top_path %>
</div>

</header>