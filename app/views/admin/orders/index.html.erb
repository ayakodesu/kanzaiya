<div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="font"><h4>注文履歴一覧</h4></div>
    </div>


    <table class="table table-hover table-bordered table-sm">
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
      </thead>
    <body>
      <% @instances.each do |instance| %>
        <% if instance.customer_id.present? %>
         <% p "order",instance %>
         <% p "customer",instance.customer %>
        <tr>
          <td><%= link_to instance.created_at.strftime('%Y年%m月%d日 %H:%M:%S'), admin_order_path(instance.id) %></td>
          <td><%= instance.customer.full_name %></td>
        </tr>
      <% else %>
        <% p instance %>
          <tr>
            <td><%= link_to instance.created_at.strftime('%Y年%m月%d日 %H:%M:%S'), admin_order_path(instance.id) %></td>
            <td><%= instance.general_customer.full_name %></td>
          </tr>
        <% end %>
      <% end %>
    </body>
    </table>

</div>