<%= render 'public/items/index', items: @items %>

   <div class="container text-center">
    <div class="row mt-5">
    <% @items.each do |item| %>
      <div class="col-3 mb-5">
        <div class="card text-white bg-secondary border-dark">
        <% if current_general_customer.already_favorited?(item) %>
          <div class="sample-box">
            <%= link_to general_public_item_favorites_path(item), method: :delete do %>
            <div class="heart">
              <i class="fas fa-heart fa-2x" style="color: red;"></i>
              </div>
        <% end %>
          </div>
        <% else %>
          <div class="sample-box">
            <%= link_to general_public_item_favorites_path(item), method: :post do %>
              <div class="heart">
                <i class="fas fa-heart fa-2x" style="color: white;"></i>
              </div>
            <% end %>
          </div>
        <% end %>
          <%= link_to general_public_item_path(item.id) do %>
            <%= image_tag item.image, size: '200x150'%>
          <% end %>
            <div class="card-body text-white bg-dark p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%= item.genre.name %></h5>
                  <%= link_to general_public_item_path(item.id) do %>
                    <%= item.name %>
                    <%= item.shape %>
                    <%= item.size %><br/>
                  <% end %>
                    在庫数:<%= item.amount %>
                    定価¥<%= item.last_price %>
              </div>
            </div>
              <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <%= link_to "商品詳細", general_public_item_path(item.id), class: "btn btn-success" %>
              </div>
        </div>
      </div>
     <% end %>
      </div>
    </div>
