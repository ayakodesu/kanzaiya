<%= render 'public/orders/confirm', orders: @orders %>

<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-6">
  <table class="table table-bordered table-sm">
      <tr>
        <th>現場名</th>
        <td><%= @order.spot %>分</td>
      </tr>
  </table>
  </div>
  </div>
</div>

<div class="container">
  <div class="row mt-3 justify-content-center">
    <div class="col-6">
      <table class="table table-bordered table-sm">
        <thead>
          <th>商品名 / 型 / サイズ</th>
          <th>数量</th>
          <th>単価(税込み)</th>
          <th>合計</th>
        </thead>
        <% total = 0 %>
    </div>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
          <%= cart_item.item.name %> /
          <%= cart_item.item.shape %> /
          <%= cart_item.item.size %></td>
          <td><%= cart_item.amount %></td>
          <td>¥<%= cart_item.item.with_tax_price %></td>
          <td>¥<%= cart_item.item.with_tax_price * cart_item.amount %></td>
          <% total += cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>

  <div class="col-6">
    <table border="1" style="border-collapse: collapse">
      <tr>
        <th bgcolor = "lavender">送料</th>
        <td>¥<%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th bgcolor = "lavender">商品合計</th>
          <td>¥<%= total %></td>
      </tr>
      <tr>
        <th bgcolor = "lavender">請求金額</th>
      <td>¥<%= @order.shipping_cost + total %></td>
      </tr>
       </table>
    </div>

  <div class="col-6">
    <table class="table table-bordered table-sm">
      <tr>
        <th>お支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>〒<%= @order.postal_code %><br />
            <%= @order.address %><br />
            <%= @order.name %></td>
      </tr>
    </table>
  </div>

  <div class="container">
    <div class="row mt-5 mb-5 justify-content-end">

      <%= form_with model: @order, url: general_public_orders_path, method: :post do |f| %>

        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :payment_method_i18n, :value => @order.payment_method_i18n %>
        <%= f.hidden_field :shipping_cost, :value => 800 %>
        <%= f.hidden_field :total_payment, :value => total %>
        <%= f.hidden_field :general_customer_id, :value => current_general_customer.id %>
        <%= f.hidden_field :spot, :value => @order.spot %>


      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
  </div>
      <% end %>
</div>
</div>

