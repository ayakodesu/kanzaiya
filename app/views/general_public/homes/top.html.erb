<%= render 'public/homes/top', homes: @homes %>



  <div class="container text-center">
    <h3>新着商品</h3>
    </div>
    <div class="container text-center">
    <header class="py-5 bg-image-full" style="background-image: url('https://cdn.pixabay.com/photo/2022/06/14/15/26/background-7262228_1280.jpg')">
      <div class="row text-center">
        <% @items.each do |item| %>
        <%= link_to general_public_item_path(item.id) do %>
        <% if item.is_active %>
        <div class="col-3 mb-5">
           <div class="card text-black bg-white border-dark">
          <%= link_to (image_tag item.image, size: '150x150'), general_public_item_path(item.id) %>
          <%= link_to general_public_item_path(item.id) do %>
            <div class="card-body text-black p-4">
              <div class="text-center">
              <strong>商品名</strong>
                <%= item.name %>
                <br />
              <strong>型</strong>
                <%= item.shape %>
                <br />
              <strong>サイズ</strong>
                <%= item.size %>
                 <br />
              <strong>定価</strong>
                ¥<%= item.last_price %>
                <br>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
        <% end %>
        <% end %>
      </div>
</div>

</header>

